{
  "manifest_version": 3,
  "name": "Browser Pilot",
  "version": "1.0.0",
  "description": "Advanced browser automation with Chrome DevTools integration",
  
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "cookies",
    "nativeMessaging"
  ],
  "host_permissions": ["<all_urls>"],
  
  "background": {
    "service_worker": "background/service-worker-native.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content.js"],
    "run_at": "document_start"
  }],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Browser Pilot"
  }
}