{
  "manifest_version": 3,
  "name": "Enhanced Browser MCP",
  "version": "0.17.0",
  "description": "Browser automation with full DevTools access for MCP",
  
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": ["<all_urls>"],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content.js"],
    "run_at": "document_start"
  }],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Enhanced Browser MCP"
  }
}